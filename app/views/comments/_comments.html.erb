<!--List of comments-->
<h5><i>Comments</i> <span class="badge badge-primary"><%= @post.comments.count%></span> </h5>
<% @post.comments.each do |comment| %>
  <div class="media border p-3">
    <img src="https://visualpharm.com/assets/315/Male%20User-595b40b85ba036ed117da579.svg" alt="John Doe" class="mr-3 mt-3 rounded-circle" style="width:40px;">
    <div class="media-body">
      <h6><strong><%= comment.username %><span> </span></strong><small><i><%= comment.created_at %></i></small></h6>
      <p><%= comment.body%></p>
      <p><%= link_to 'Delete comment', [comment.post, comment], 
                  method: :delete,
                  data: { confirm: 'Do you want to delete this comment?'},
                  :class => 'btn btn-outline-danger btn-sm'%></p>
    </div>
  </div>
  <br>
<% end %>
<hr>
