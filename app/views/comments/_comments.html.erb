<!--List of comments-->
<h5><i>Comments</i> <span class="badge badge-primary"><%= @post.comments.count%></span> </h5>
<% @post.comments.each do |comment| %>
  <div class="media border p-3">
    <img src="https://image.flaticon.com/icons/png/512/149/149071.png" alt="John Doe" class="mr-3 mt-3 rounded-circle" style="width:30px;">
    <div class="media-body">
      <h6><strong><%= comment.username %><span> </span></strong><small><i><%= comment.created_at %></i></small></h6>
      <p><%= comment.body%></p>
      <p><%= link_to ' Remove', [comment.post, comment], 
                  method: :delete,
                  data: { confirm: 'Do you want to delete this comment?'},
                  :class => 'btn btn-danger btn-sm fa fa-close'%></p>
    </div>
  </div>
  <br>
<% end %>
<hr>
