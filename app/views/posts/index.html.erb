<h1>Blog Posts</h1>
<% @posts.each do |post|%>
  <div class="card card-body bg-light p-3">
    <h4> <%= post.title %></h4>
    <p><%= post.body %></p>
    <div>
      <p><i>Comments</i></p>
      <span class="badge badge-primary"></span>
    </div>
    <div>
      <%= link_to "Read More", post_path(post), :class => 'btn btn-primary btn-sm'%>
    </div>
  </div>
  <br>
<%end%>
