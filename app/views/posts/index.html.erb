<h1>Blog Posts</h1>
<% @posts.each do |post|%>
  <div class="card">
    <div class="card-header"><%= post.title %></div>
    <div class="card-body"><%= post.body %></div>
    <div class="card-footer">
      <%= link_to "Read More", post_path(post), :class => 'btn btn-primary'%>
    </div>
  </div>
  <br>
<%end%>
