<h2><%= @post.title%></h2>
<p><%= @post.body%></p>
<hr>
<%= link_to "Edit Post", edit_post_path(@post), :class => 'btn btn-outline-primary btn-sm' %>
<%= link_to "Delete", post_path(@post),
        method: :delete, 
        data: {confirm: 'Are you sure you want to delete this post?'},
        :class => 'btn btn-danger btn-sm fa fa-trash-o' %>
<hr>
<!-- rendering the comments layout-->
<%= render 'comments/comments' %>
<!-- rendering the comments form layout -->
<%= render 'comments/comment_form' %>
